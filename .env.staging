# Application Settings
FLASK_ENV=staging
SECRET_KEY=your_staging_secret_key
ALLOWED_HOSTS=staging.yourdomain.com,localhost
PORT=8000
MAX_WORKERS=4
LOG_LEVEL=INFO

# Database Settings
DB_NAME=pos_db
DB_USER=postgres
DB_PASSWORD=staging_db_password
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@db:5432/${DB_NAME}

# SW Sapien API Configuration
SW_URL=https://services.test.sw.com.mx
SW_TOKEN=your_staging_token

# SAT Configuration
SAT_RFC=TEST010101000
SAT_NOMBRE=EMPRESA DE PRUEBA
SAT_REGIMEN_FISCAL=601
SAT_CP=12345

# Nginx Settings
NGINX_PORT=80
NGINX_SSL_PORT=443
SERVER_NAME=staging.yourdomain.com

# Backup Settings
BACKUP_RETENTION_DAYS=7
BACKUP_TIME=03:00
